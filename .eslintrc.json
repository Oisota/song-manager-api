{
	"env": {
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"extends": "eslint:recommended",
	"rules": {
		"no-var": "error",
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": "off",
		"no-new": "error",
		"no-param-reassign": "error",
		"array-callback-return": "error",
		"no-shadow": "error",
		"no-use-before-define": "error",
		"global-require": "error",
		"no-process-env": "error",
		"no-lonely-if": "error",
		"max-params": ["error", 4],
		"max-len": [
			"error",
			{"code": 120, "tabWidth": 2}
		],
		"no-plusplus": "error",
		"require-atomic-updates": "off"
	}
}
